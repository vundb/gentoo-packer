{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
