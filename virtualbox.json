{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "guest_additions_mode": "disable",
      "guest_os_type": "Gentoo_64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "86563ddde411f352035aa2ce219a070a8e3821e749c011da73a737dd3e9dcef2181e51b79b5e22497adbe39a356c5dbcb77ec0e03e81bb303b112c3e59efead1",
      "iso_checksum_type": "sha512",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "20s",
      "type": "virtualbox-iso",
      "vm_name": "Gentoo"
    }
  ],
  "description": "Faithful Stage 3 Gentoo Installation (VirtualBox)",
  "post-processors": [
    {
      "output": "codylane-gentoo-{{user `stage3`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=virtualbox",
        "SCRIPTS=/tmp",
        "COUNTRY={{user `country`}}",
        "MAKEOPTS=-j3",
        "TIMEZONE=UTC",
        "LANG=en_US",
        "KEYMAP=us"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "password": "packer",
    "stage3": "20170907",
    "username": "root",
    "country": "USA",
    "headless": "false"
  }
}
